<!-- Phidgets IMU launch file -->

<launch>

  <arg name="output_topic_imu" default="/phidgets_imu/data" />

  #### Nodelet manager ######################################################

  <node pkg="nodelet" type="nodelet" name="imu_manager" args="manager" output="screen"/>

  #### IMU Driver ###########################################################

  <node pkg="nodelet" type="nodelet" name="PhidgetsImuNodelet" args="load phidgets_imu/PhidgetsImuNodelet imu_manager" output="screen">

        # supported data rates: 4 8 16 24 32 40 ... 1000 (in ms)
        <param name="period" value="40"/>
        <!--param name="frame_id" value="imu_spatial_link"/-->
        <param name="frame_id" value="imu_link"/>

        # optional param serial_number, default is -1
        <param name="serial_number" value="301820"/>

        # local field at time of calibration = 0.475279 Gauss @ 45.2266846 N 11.984320 E
        # compass correction params (see http://www.phidgets.com/docs/1044_User_Guide)
        <param name="cc_mag_field" value="0.76068"/>
        <param name="cc_offset0" value="0.04664"/>
        <param name="cc_offset1" value="0.10637"/>
        <param name="cc_offset2" value="0.00000"/>
        <param name="cc_gain0" value="1.36206"/>
        <param name="cc_gain1" value="1.26717"/>
        <param name="cc_gain2" value="1.31462"/>
        <param name="cc_t0" value="-0.00007"/>
        <param name="cc_t1" value="0.00000"/>
        <param name="cc_t2" value="-0.00007"/>
        <param name="cc_t3" value="0.00000"/>
        <param name="cc_t4" value="0.00000"/>
        <param name="cc_t5" value="0.00000"/>

        <remap from="/imu/data_raw" to="/phidgets_imu/data_raw"/>

  </node>

  #### IMU Orientation Filter ###############################################

  <!-- <node pkg="nodelet" type="nodelet" name="ImuFilterNodelet" args="load imu_filter_madgwick/ImuFilterNodelet imu_manager" output="screen">
        <param name="gain" value="0.05"/>
        <param name="orientation_stddev" value="0.1"/>
        <param name="zeta" value="0"/>
        <param name="mag_bias_x" value="3"/>
        <param name="mag_bias_y" value="3"/>
        <param name="mag_bias_z" value="3"/>
        <param name="use_mag" value="false"/>
        <param name="use_magnetic_field_msg" value="false"/>
        <param name="world_frame" value="enu"/>
        <param name="fixed_frame" value="imu_base"/>
        <param name="publish_tf" value="true"/>
  </node> -->

  #### Fix of mag topic

  <node pkg="tests" type="imu_mag_fix.py" name="imu_mag_fix" output="screen"/>

  #### Complementary filter

  <node pkg="imu_complementary_filter" type="complementary_filter_node" name="complementary_filter_gain_node_phidgets" output="screen">
        <param name="gain_acc" value="0.01"/>
        <param name="gain_mag" value="0.01"/>
        <param name="bias_alpha" value="1"/>
        <param name="do_bias_estimation" value="false"/>
        <param name="do_adaptive_gain" value="true"/>
        <param name="use_mag" value="true"/>
        <param name="fixed_frame" value="imu_link"/>
        <param name="publish_debug_topics" value="false"/>
        <param name="publish_tf" value="false"/>
        <remap from="/imu/data_raw" to="/phidgets_imu/data_raw"/>
        <remap from="/imu/mag" to="/imu/mag_fixed"/>
        <remap from="/imu/data" to="$(arg output_topic_imu)"/>
  </node>

</launch>
